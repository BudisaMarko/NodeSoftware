						<apply>
							<or/>
							<apply>
								<eq/>
								<apply>
									<abs/>
									<apply>
										<minus/>
										<ci>TotalAngularMomentum@InitialStateRef</ci>
										<ci>TotalAngularMomentum@FinalStateRef</ci>
