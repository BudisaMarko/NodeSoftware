<?xml version="1.0" encoding="UTF-8"?>
<XSAMSData xsi:noNamespaceSchemaLocation="http://www-amdis.iaea.org/xsams/schema/xsams-0.1.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Sources>
    {% for source  in sources %}
    <Source sourceID="S-{{ source.id }}">
      <Authors>
	<Author>
	  <Name>{{ source.srcdescr }}</Name>
			  </Author>
      </Authors>
      <Category>journal</Category>
      <Year>2222</Year>
      <SourceName>SomeJournal</SourceName>
      <Volume>666</Volume>
			<PageBegin>666</PageBegin>
    </Source>
    {% endfor  %}
  </Sources>
  <Methods>
    <Method methodID="MEXP">
      <Category>measured</Category>
      <Description />
    </Method>
  </Methods>


  <States>
    <Atoms>
    {% for state in states %}
      <Atom>
        <NuclearCharge>1</NuclearCharge>
        <Isotope>
          <IonState>
            <IonCharge>0</IonCharge>
            <AtomicState stateID="S-{{ state.id }}">
              <Description>{{ state.id }}</Description>
              <AtomicNumericalData>
                <StateEnergy>
                  <Value units="1/cm">5.6</Value>
                </StateEnergy>
                <LandeFactor/>
              </AtomicNumericalData>
              <AtomicQuantumNumbers>
                <Parity>even</Parity>
                <TotalAngularMomentum>2.5</TotalAngularMomentum>
              </AtomicQuantumNumbers>
              <AtomicComposition>
                <Component>
                  <Term>
                    <LS>
                      <L>
                        <Value>2.5</Value>
                      </L>
                      <S>
                        <Value>2.5</Value>
                      </S>
                    </LS>
                  </Term>
                </Component>
              </AtomicComposition>
            </AtomicState>
          </IonState>
        </Isotope>
      </Atom>
    {% endfor  %}
    </Atoms>
  </States>


  <Processes>
    <Radiative>
      {% for trans in transitions %}
      <RadiativeTransition methodRef="MEXP" sourceRef="S-{{ trans.wave_ref.id }}">
        <EnergyWavelength>
	  <Wavelength>
            <Experimental sourceRef="S-{{ trans.wave_ref.id }}">
              <Value units="1/cm">{{ trans.vacwave }}</Value>
              <Value units="1/cm">{{ trans.airwave }}</Value>
              <Accuracy>Flag: {{ trans.acflag }}, Value: {{ trans.accur }}</Accuracy>
            </Experimental>
          </Wavelength>
        </EnergyWavelength>
	{% endfor  %}
      </Radiative>
      
      <Processes/>
    </XSAMSData>
    
